# from: wkou
# source: https://clang.llvm.org/docs/ClangFormatStyleOptions.html

# there exist other major styles:
# Google (my preference),
# Mozilla (BSD/Eric Allman style bracket and indentation)
# etc.
# see: https://en.wikipedia.org/wiki/Indentation_style
BasedOnStyle: Google

# indent case labels  one level from the switch statement
IndentCaseLabels: true

ColumnLimit: 90
IndentWidth: 4

# useful
SortIncludes: false

# space in one line
SpacesInParentheses: true
SpacesInAngles: true
SpacesInCStyleCastParentheses: true
SpacesInContainerLiterals: true
SpacesInSquareBrackets: true

BreakBeforeBraces: Custom
PointerAlignment: Left
AccessModifierOffset: -4

# disable "all-in-one-line" style
AllowShortIfStatementsOnASingleLine: false
AllowShortLoopsOnASingleLine: false
AllowShortBlocksOnASingleLine: false
AllowShortFunctionsOnASingleLine: None

# If true, horizontally aligns arguments after an open bracket.
AlignAfterOpenBracket: Align

BreakConstructorInitializers: BeforeComma
BraceWrapping:
    AfterClass: true
    AfterControlStatement: true
    AfterEnum: true
    AfterFunction: true
    AfterNamespace: true
    AfterStruct: true
    AfterUnion: true
    BeforeCatch: true
    BeforeElse: true

PenaltyReturnTypeOnItsOwnLine: 1000
BreakBeforeBinaryOperators: NonAssignment
BinPackArguments: false
BinPackParameters: false
AllowAllParametersOfDeclarationOnNextLine: false
AlwaysBreakTemplateDeclarations: true
